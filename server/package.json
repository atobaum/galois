{
  "name": "galois-server",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec ts-node ./src/index.ts",
    "start": "ts-node src/index.ts",
    "start:prod": "node build/index.js",
    "test": "jest --watch",
    "test:ci": "jest --collect-coverage --collectCoverageFrom=src/**/*.ts",
    "build": "tsc",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.4",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^8.0.29",
    "@types/supertest": "^2.0.10",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "apollo-server-koa": "^2.18.0",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.12.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.0.1",
    "pg": "^8.2.1",
    "typeorm": "0.2.25"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  }
}
